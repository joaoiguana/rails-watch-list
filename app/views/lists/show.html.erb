<div class="container margin">
  <h2><%= @list.name %></h2>

  <% @list.movies.each do |movie| %>
  <h3><%= movie.title %></h3>
  <p><%= movie.overview %></p>
  <%= image_tag movie.poster_url, :class => "poster" %>
  <p>IMDB rating: <%= movie.rating %></p>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <%= link_to "Delete movie",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link"
  %>
  <% end %>
  <p>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "link" %>
  </p>
</div>
