<div class="container margin">
  <h2 class="margin-bottom"><%= @list.name %></h2>

  <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <%= image_tag movie.poster_url, :class => "poster" %>
      <div class="card-trip-infos">
        <div>
          <h3><em><%= movie.title %></em></h3>
          <p><%= movie.overview %></p>
        </div>
        <p>IMDB rating: <%= movie.rating %></p>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>

        <td>
          <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link" do %>
            <%= image_tag "trash.svg" %>
          <% end %>
        </td>
      </div>
    </div>
  <% end %>
  <button type="button" class="btn btn-dark"><%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "link" %></button>
</div>
