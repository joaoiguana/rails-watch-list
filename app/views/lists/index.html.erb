<div class="container">
  <h1 class="margin margin-bottom">Lists</h1>
  <% @lists.each do |list| %>
    <div class="card-category margin-bottom" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
      <%= link_to list.name, list_path(list), class: "link-title" %>
      <% if list.photo.attached? %>
        <% cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    </div>
  <% end %>
</div>
